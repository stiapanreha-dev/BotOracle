# Bot Oracle Configuration
# Copy to .env and configure your values

# Telegram Bot
BOT_TOKEN=your_bot_token_here

# Database
DATABASE_URL=postgresql+asyncpg://app:app@db:5432/app

# Robokassa Payment System
ROBO_LOGIN=your_robokassa_login
ROBO_PASS1=your_robokassa_password1
ROBO_PASS2=your_robokassa_password2

# Base URL for webhooks
BASE_URL=https://your-domain.com

# Bot Oracle Settings
FREE_QUESTIONS=5
USE_ADMIN_PERSONA=true

# CRM System Configuration
HUMANIZED_MAX_CONTACTS_PER_DAY=3
NUDGE_MIN_HOURS=48
NUDGE_MAX_PER_WEEK=2
DISPATCH_INTERVAL_SECONDS=60

# Admin Authentication
ADMIN_TOKEN=your_super_secret_admin_token

# OpenAI API for GPT-5 integration
OPENAI_API_KEY=your_openai_api_key_here

# Admin user IDs (comma-separated)
ADMIN_IDS=123456789,987654321